{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mongo": true,
        "mocha": true,
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": [
            "off"
        ],
        "indent": [
            "error",
            4,
            { "SwitchCase" : 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
